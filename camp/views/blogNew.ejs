<% include partials/header %>

<div class='container'>
	<div class='row'>
		<h1 style='text-align: center'>Add a new Blog Post</h1>
		<div style='width:70%; margin:30px auto'>
		<form action="/blog" method='POST'>
		<div class="form-group">
				<input class='form-control' type="text" name='title' placeholder="Title of your Post">
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name="image" placeholder="Image for your post">
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name="body"	placeholder="Enter Description">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Back to camp list</a>
		</div>
	</div>
</div>

<% include partials/footer %>