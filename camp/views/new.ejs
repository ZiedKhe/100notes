<% include partials/header %>

<div class='container'>
	<div class='row'>
		<h1 style='text-align: center'>Add a new campground</h1>
		<div style='width:30%; margin:30px auto'>
		<form action="/campgrounds" method='POST'>
		<div class="form-group">
				<input class='form-control' type="text" name='name' placeholder="Name">
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name="image" placeholder="Image of the campground">
			</div>
			<div class="form-group">
				<input class='form-control' type="text" name="desc"	placeholder="Enter Description">
			</div>
			<div class="form-group">
				<button class="btn btn-large btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href="/campgrounds">Back to camp list</a>
		</div>
	</div>
</div>


