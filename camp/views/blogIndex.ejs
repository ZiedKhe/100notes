<% include partials/blogHeader %>

<div class='ui main text container'>
	<div class='ui huge header'>A blog on Node</div>

	<div class='ui top attached segment'>
	<div class='ui divided items'>
		
	<% allPosts.forEach(function(post){ %>	
		<div class='item'>
			<div class='image'> <img src="<%= post.image %>" alt=""> </div>
			<div class='content'> 
				<a class='header' href='/blog/<%=post._id%>'><%= post.title %> </a>
			<div class="meta">
				<span class="meta"><%=post.created.toDateString() %></span>
			</div>
			<div class='description'> 
				<p><%- post.body.substring(0,100)%> ...</p>
			</div>
			<div class='extra'>
				<a class = 'ui floated basic button black' href="/blog/<%=post._id %>"> Read More </a>
			</div>
			
		</div>
	<% }) %>	
	</div>
	</div>
</div>


<% include partials/blogFooter %>

