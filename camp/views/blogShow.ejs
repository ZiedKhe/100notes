<% include partials/blogHeader %>

<div class="ui main text container segment"> 

	<div class="ui huge header">
		<%= post.title %>
	</div>
	<div class='ui top attached segment'>
		<div class='item'>
			<img class='ui center rounded image' src="<%=post.image%>" alt="">
			<div class='content'>
				<span><%=post.created.toDateString() %></span>
			</div>
			<div class='description'>
				<p><%=post.body%></p>
			</div>
		</div>
	</div>
	<a class="ui blue button basic" href="/blog/<%=post._id%>/edit">Edit</a>

	<form id='delete' action="/blog/<%=post._id%>?_method=DELETE" method='POST'>
		<button class='ui red basic button'>Delete</button>
	</form>

</div>

<% include partials/blogFooter %>

