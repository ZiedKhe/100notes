<% include partials/blogHeader %>

<div class = 'ui container main text segment'>
	<div class="ui huge header">Edit Blog post :</div>
	<form class="ui form" action="/blog/<%=post._id%>?_method=PUT" method='POST'>
		<div class='field'>
			<label>Title</label>
			<input type="text" name='blog[title]' value='<%= post.title %>' placeholder='Title'>
		</div>
		<div class='field'>
			<label>Image</label>
			<input type="text" name='blog[image]' value='<%= post.image %>' placeholder='Image'>
		</div>
		<div class='field'>
			<label>Content</label>
			<textarea name='blog[body]'><%= post.body %></textarea>
		</div>

		<input class='ui big button blue basic'  type="submit">
	</form>

</div>

<% include partials/blogFooter %>

